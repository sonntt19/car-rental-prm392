<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".controller.common.DetailHistoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:text="Detail Rental"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_history_detail_rental_id"
            android:layout_width="126dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:text="Rental ID:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/history_detail_id"
            android:layout_width="251dp"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_history_detail_customer"
            android:layout_width="126dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:text="Customer:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/history_detail_customer"
            android:layout_width="251dp"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_history_detail_car"
            android:layout_width="126dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:text="Car:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/history_detail_car"
            android:layout_width="251dp"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_history_detail_startDate"
            android:layout_width="126dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:text="Start Date:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/history_detail_startDate"
            android:layout_width="251dp"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_history_detail_endDate"
            android:layout_width="126dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:text="End Date:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/history_detail_endDate"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="126dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:text="Total Cost:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/history_detail_total"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_history_detail_status"
            android:layout_width="126dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:text="Status:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/history_detail_status"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Cancel" />
    <Button
        android:id="@+id/btn_deal"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Deal" />
    <Button
        android:id="@+id/btn_finish"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Finish" />


</LinearLayout>