<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".controller.common.DetailHistoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:text="Detail History"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_login" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_history_detail_rental_id"
            android:layout_width="126dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:text="Rental ID"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_history_detail_id"
            android:layout_width="251dp"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_history_detail_customer"
            android:layout_width="126dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:text="Customer"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_history_detail_customer"
            android:layout_width="251dp"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_history_detail_car"
            android:layout_width="126dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:text="Car"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_history_detail_car"
            android:layout_width="251dp"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_history_detail_startDate"
            android:layout_width="126dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:text="Start Date"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_history_detail_startDate"
            android:layout_width="251dp"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_history_detail_endDate"
            android:layout_width="126dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:text="End Date"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_history_detail_endDate"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_history_detail_status"
            android:layout_width="126dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:text="Status"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_history_detail_status"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </LinearLayout>
    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Save" />


</LinearLayout>